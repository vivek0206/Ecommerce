<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pviewGroup"
    android:background="@android:color/white"
    android:clickable="true"
    android:layout_gravity="center"
    android:layout_marginRight="1sp"
    android:layout_marginBottom="1sp"
    android:padding="8sp"
    >
    <ImageView
        android:id="@+id/psimage"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/price_bar"
        android:layout_below="@+id/psimage"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/pssalePrice"
            android:text="saleprice"
            android:textSize="20sp"
            android:padding="5sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/psorigPrice"
            android:text="orgprice"
            android:textSize="20sp"
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/pstitle"
        android:text="title"
        android:textSize="18sp"
        android:padding="2sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/price_bar"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        />

</LinearLayout>