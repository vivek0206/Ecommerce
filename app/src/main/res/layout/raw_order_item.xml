<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/orange"
        android:id="@+id/raw_order_item_image"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/raw_order_item_image"
        android:text="Item Name"
        android:textColor="@color/black"
        android:padding="5dp"
        android:id="@+id/raw_order_item_name"
        android:layout_margin="5dp"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Price"
        android:textColor="@color/black"
        android:padding="5dp"
        android:id="@+id/raw_order_item_price"
        android:layout_margin="5dp"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/raw_order_item_price"
        android:src="@drawable/ic_next_24"></ImageView>




</RelativeLayout>