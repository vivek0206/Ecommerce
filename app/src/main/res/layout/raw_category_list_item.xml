<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5sp"
    android:layout_margin="10sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:id="@+id/raw_category_productImg"
            android:src="@drawable/placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:padding="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:id="@+id/raw_category_productName"
                android:padding="5sp"
                android:textSize="14dp"/>

<!--            <RatingBar-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="40dp"-->
<!--                android:isIndicator="true"-->
<!--                android:scaleX="0.4"-->
<!--                android:id="@+id/raw_category_productRating"-->
<!--                android:scaleY="0.4"-->
<!--                android:transformPivotX="0dp"/>-->

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                style = "?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:id="@+id/raw_category_productRating"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:id="@+id/raw_category_productOfferPrice"
                    android:layout_marginLeft="5dp"
                    android:text="510"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/raw_category_productOriginalPrice"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="510"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:id="@+id/raw_category_prductSaving"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="510 Off"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wishlist_fill"
        android:id="@+id/raw_category_wishlist"
        android:layout_alignParentRight="true"/>


</RelativeLayout>